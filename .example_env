# LOGGING LEVEL
LOGGING_LEVEL=ERROR                 # valid are 'ERROR', 'WARNING', 'INFO'

# DATABASE CONFIGURATION
MOBILITY_DB_SERVER=datep-database   # database container
MOBILITY_DB_PORT=5432               # default PG port
MOBILITY_DB_NAME=                   # database name
MOBILITY_DB_USERNAME=               # admin user, which also will be used for querying and writing
MOBILITY_DB_PASSWORD=               # admin password

# REFRESHMENT TIME FOR MATERIALIZED VIEW
# database creates materialized view, which is refreshed
# every *** seconds
DB_MV_REFRESHMENT_TIME=300          # seconds, after which materialized view will be refreshed

# Lat, Lon and Radius to get data for or
# to use for viewstate in dashboard (if viewstate
# lat / lon is not set)
LATITUDE=
LONGITUDE=
RADIUS=

# API CONFIGURATION
MOBILITY_API_URL=http://datep-api:8000/api  # api container
MOBILITY_API_ADMIN_USERNAME=                # admin user for API, which can read and write
MOBILITY_API_ADMIN_PASSWORD=
MOBILITY_API_READ_ALL_USER=                 # user for API, which can read everything but not write
MOBILITY_API_READ_ALL_PASSWORD=
MOBILITY_API_ALGORITHM=                     # Hashing alogrythm for api passwords
MOBILITY_API_EXPIRE_MINUTES=                # time, after which API bearer token expires
MOBILITY_API_PRIVATE_KEY="-----BEGIN EC PRIVATE KEY-----
# KEY GOES IN THIS LINE
-----END EC PRIVATE KEY-----"
MOBILITY_API_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
# KEY GOES IN THIS LINE
-----END PUBLIC KEY-----"

# INRIX CRAWLER SECRETS
INRIX_APP_ID=
INRIX_HASH_TOKEN=

# LIST OF LANUV STATIONS TO CRAWL DATA FOR
LANUV_STATIONS=

# FROST SERVER CONFIGURATION
FROST_DB_USERNAME=
FROST_DB_PASSWORD=

# 4traffic BOXES CONFIGURATION
MQTT_HOST=
MQTT_PORT=
MQTT_USER=
MQTT_PASSWORD=

# PGADMIN CONFIGURATION
PG_ADMIN_EMAIL=
PG_ADMIN_PASSWORD=

# DASHBOARD CONFIGURATION
VIEWSTATE_LAT=                  # viewstate latitude
VIEWSTATE_LON=                  # viewstate longitude
VIEWSTATE_ZOOM=                 # viewstate zoom
VIEWSTATE_PITCH=                # viewstate pitch
